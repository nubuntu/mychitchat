<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <id>90000</id>
  <defaultcontrol>50</defaultcontrol>
  <allowoverlay>yes</allowoverlay>
  <disabletopbar>yes</disabletopbar>
  <controls>
<import>common.window.xml</import>
<import>common.facade.pictures.xml</import> 
    <control>
      <description>action menu</description>
      <type>actiongroup</type>
      <visible>!Control.HasFocus(200)</visible>
      <onexit>50</onexit>
      <buttonX>0</buttonX>
      <buttonY>0</buttonY>
      <buttonwidth>100</buttonwidth>
      <buttonheight>720</buttonheight>
      <textureFocus>Action_focus.png</textureFocus>
      <textureNoFocus>Action_nofocus.png</textureNoFocus>
      <width>720</width>
      <height>900</height>
      <dimColor>00ffffff</dimColor>
      <defaultcontrol>500</defaultcontrol>
      <animation effect="Slide" reversible="FALSE" start="-300,0" time="450">Visible</animation>
      <control>
        <description>Default Background</description>
        <type>image</type>
        <id>401</id>
        <posX>0</posX>
        <posY>0</posY>
        <width>1366</width>
        <height>768</height>
        <texture></texture>
      </control>
      <control>
        <type>image</type>
        <posX>15</posX>
        <posY>63</posY>
        <width>600</width>
        <height>430</height>
        <texture>Backslide.png</texture>
        <colorDiffuse>fffffffff</colorDiffuse>
      </control>
      <control>
        <description>group element</description>
        <type>group</type>
        <visible>!Control.HasFocus(200)</visible>
        <posX>40</posX>
        <posY>97</posY>
        <layout>StackLayout</layout>
        <animation effect="Slide" reversible="FALSE" start="-300,0" time="450">Visible</animation>
        <animation effect="Slide" end="-300,0" reversible="FALSE" time="450">Hidden</animation>
        <control>
          <id>499</id>
          <width>510</width>         
          <description>Update my Status</description>
          <type>button</type>
          <onup>506</onup>
          <ondown>500</ondown>
          <label>Update my Status</label>
        </control>
        <control>
          <id>500</id>
          <description>Update my Mood</description>
          <type>button</type>
          <onup>499</onup>
          <ondown>501</ondown>
          <label>Update my Mood</label>
        </control>
        <control>
          <id>501</id>
          <description>Update my Activity</description>
          <type>button</type>
          <onup>500</onup>
          <ondown>502</ondown>
          <label>Update my Activity</label>
        </control>
        <control>
          <id>502</id>
          <description>BrowseLocalCheez</description>
          <type>button</type>
          <onup>501</onup>
          <ondown>503</ondown>
          <label>Browse locally available Cheez..</label>
        </control>
        <control>
          <id>503</id>
          <description>ShowSlideShowCurrent</description>
          <type>button</type>
          <onup>502</onup>
          <ondown>504</ondown>
          <label>Start Slideshow (current items)</label>
        </control>
        <control>
          <id>504</id>
          <description>ShowSlideShowAllLocal</description>
          <type>button</type>
          <onup>503</onup>
          <ondown>504</ondown>
          <label>Start Slideshow (all local items)</label>
        </control>
        <control>
          <id>505</id>
          <description>CancelAllDownloads</description>
          <type>button</type>
          <onup>504</onup>
          <ondown>506</ondown>
          <enabled>false</enabled>
          <label>Cancel Cheez Download</label>          
        </control>
        <control>
          <id>506</id>          
          <description>DeleteLocalCheez</description>
          <type>button</type>
          <onup>505</onup>
          <ondown>499</ondown>          
          <visible>no</visible>
          <label>Delete local Cheez</label>
        </control>
      </control>
    </control>
    <control>
      <id>600</id>
      <description>BackGround</description>
      <type>image</type>
      <posX>0</posX>
      <posY>0</posY>
      <texture>vEndlessCheez/Background.png</texture>
    </control>
    <control>
      <id>403</id>
      <description>text label</description>
      <type>label</type>
      <posX>720</posX>
      <posY>680</posY>
      <font>font11</font>
      <align>RIGHT</align>
      <textcolor>ffffffff</textcolor>
      <visible>no</visible>
      <label>#EndlessCheez.CurrentItem</label>
    </control>
    <control>
      <id>402</id>
      <type>progress</type>
      <visible>no</visible>
      <posX>720</posX>
      <posY>680</posY>
      <width>500</width>
    </control>
    <control>
      <description>Message History</description>
      <type>textbox</type>
      <id>700</id>
      <posX>220</posX>
      <posY>220</posY>
      <width>410</width>
      <height>300</height>
      <spinWidth>16</spinWidth>
      <spinHeight>16</spinHeight>
      <spinPosX>610</spinPosX>
      <spinPosY>530</spinPosY>
      <spinColor>ffffffff</spinColor>
      <textureUp>page_up_nofocus.png</textureUp>
      <textureDown>page_down_nofocus.png</textureDown>
      <textureUpFocus>page_up_focus.png</textureUpFocus>
      <textureDownFocus>page_down_focus.png</textureDownFocus>
      <image>icon-folder.png</image>
      <font>font13</font>
      <textcolor>ffffffff</textcolor>
      <colordiffuse>ffffffff</colordiffuse>
    </control>
  </controls>
</window>
