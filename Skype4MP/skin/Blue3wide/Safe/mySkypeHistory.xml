<window>
   <id>1914</id>
   <defaultcontrol>2</defaultcontrol>
   <allowoverlay>yes</allowoverlay>
   
   <controls>
	  <import>common.time.xml</import>
      <control>
         <description>BG</description>
         <type>image</type>
         <id>1</id>
         <posX>0</posX>
         <posY>0</posY>
         <texture>background.png</texture>
      </control>
      <control>
         <type>image</type>
         <id>1</id>
         <posX>60</posX>
         <posY>10</posY>
         <texture width="190" height="84">skype_logo.png</texture>
      </control>
      <!--
      <control>
         <description>Skype text label</description>
         <type>label</type>
         <id>1</id>
         <posX>250</posX>
         <posY>70</posY>
         <label>Skype</label>
         <font>font16</font>
         <align>right</align>
         <textcolor>ffffffff</textcolor>
      </control>
      -->
      <control>
         <type>group</type>
		  <layout>StackLayout</layout>
		  <description>group element</description>
		  <animation effect="fade" time="250">WindowOpen</animation>
		  <animation effect="fade" time="500">WindowClose</animation>
		  <animation effect="slide" time="250" start="-300,0">WindowOpen</animation>
		  <animation effect="slide" time="500" end="0,-300">WindowClose</animation>
		  <posX>60</posX>
		  <posY>97</posY>
		  <control>
            <description>status button</description>
            <type>selectbutton</type>
            <id>3</id>
            <label>View</label>

            <onup>2</onup>
            <ondown>4</ondown>
            <subitems>
               <subitem>Missed</subitem>
               <subitem>Incoming</subitem>
               <subitem>Outgoing</subitem>
            </subitems>
         </control>
         <control>
            <description>Purge missed calls Button</description>
            <type>button</type>
            <id>2</id>
			 			<label>Purge history</label>
            <onup>7</onup>
            <ondown>3</ondown>
            <onleft>2</onleft>
            <onright>8</onright>
         </control>
      </control>
      <control>
         <type>group</type>
         <description>group element</description>
         <control>
						<description>list name</description>
						<type>label</type>
						<id>11</id>
						<posX>400</posX>
						<posY>67</posY>
						<label>#Skype.History.ListName</label>
						<font>font14</font>
						<align>left</align>
						<textcolor>ffffffff</textcolor>
				 </control>
         <control>
            <description>missed calls listcontrol</description>
            <type>listcontrol</type>
            <id>12</id>
            <posX>400</posX>
            <posY>97</posY>
            <width>900</width>
						<textXOff>20</textXOff>
						<textYOff>3</textYOff>
            <font>font12</font>
            <onleft>2</onleft>
            <onright>2</onright>
            <onup>2</onup>
            <ondown>2</ondown>
        </control>
      </control>
   </controls>
</window>